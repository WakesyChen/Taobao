<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/detail_lv_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:background="@mipmap/tb_icon"/>
        <TextView
            android:id="@+id/detail_tv_title"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:text="恋上猫女衣坊"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/detail_tv_comment"
        android:padding="10dp"
        android:textColor="#000"
        android:text="质量很好，比淘宝其他店铺都便宜了好多，恋上猫女衣坊，值得你一看，地阿基查看，店铺地址：http://yecaoly.taobao.com"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/detail_tv_time"
            android:text="2014-9-15 恋上猫女衣坊"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>